<% layout('/layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center"> New Campground</h1>
    <div class="col-6 offset-3">

        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method='POST'>
            <div class="mb-3">
                <label class="form-label" for="title"> Title </label>
                <input class="form-control" value="<%=campground.title%>" type="text" id="title"
                    name="campground[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location"> Location </label>
                <input class="form-control" type="text" id="location" value="<%= campground.location %>"
                    name="campground[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price"> Campground Price </label>

                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" aria-label="price-label" aria-describedby="price-label"
                        value="<%= campground.price %>" name="campground[price]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image"> Image URL </label>
                <input class="form-control" type="text" value="<%= campground.image %>" id="image"
                    name="campground[image]">
            </div>

            <div class="mb-3">
                <label class="form-label" for="description"> Description </label>
                <input class="form-control" type="text" value="<%= campground.description %>" id="description"
                    name="campground[description]">
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>

        </form>
        <div><a href="/campgrounds"> Back to All Campgrounds </a></div>
    </div>
</div>